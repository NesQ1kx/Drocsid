@foreach (var t in Model)
{
    <div class="topic">
        <div class="image">
            <img src="images/1.jpg" alt="">
            <div class="topic_content">
                <a href="@Url.Action("Topic", "Forum", new { id = t.Id})">@t.TopicName</a>
            </div>
            <div class="author">
                <a href="#">@t.Author</a>
            </div>
            <div class="date">
                @t.Pubdate
            </div>
        </div>
    </div>
}

