<div class="content">
    <h2>Последние темы</h2>
    @foreach(var t in Model)
    {
    <div class="topic">
        <div class="image">
            @Html.GravatarImage(t.Email, cssClass: "gravatar img-responsive")
            <div class="topic_content">
                <a href="@Url.Action("Topic", "Forum", new { id = t.Id})">@t.TopicName</a>
            </div>
            <div class="author">
                <a href="@Url.Action("Profile", "User", new { userName = t.Author})">@t.Author</a>
            </div>
            <div class="date">
                @t.Pubdate
            </div>
        </div>
    </div>
    }
</div>
<script>
    $(document).ready(function () {
        $('.games_menu a').click(function (e) {
            e.preventDefault();
            $('.games_menu .active').removeClass('active');
            $(this).addClass('active');
            var tab = $(this).attr('href');
            $('.game').not(tab).css({ 'display': 'none' })
            $(tab).fadeIn(400);
        });
    });
</script>