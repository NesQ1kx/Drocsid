@model IEnumerable<Entities.Section>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterView.cshtml";
}

<div class="content">
    <h2>Форум</h2>
    @foreach (var s in Model)
    {
        <div class="section">
            <h3 class="link"><a href="@Url.Action("Section", "Forum", new { id = s.Id })">@s.SectionName</a></h3>
            <div class="section_content">
                @Html.Action("SectionTopicsShort", "Forum", new { id = s.Id})
            </div>
        </div>
    }

    @if(ViewBag.IsAdmin)
    {
        <a href="@Url.Action("AddSection", "Forum")" id="go_reg" style="text-decoration:none;">Добавить раздел</a>
    }


</div>

